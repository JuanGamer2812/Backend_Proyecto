# Database Configuration (PostgreSQL)
PG_HOST=localhost
PG_PORT=5432
PG_USER=postgres
PG_PASSWORD=your_password_here
PG_DATABASE=eclat

# JWT Configuration
JWT_SECRET=change_this_to_a_secure_random_string_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ========================================
# EMAILJS CONFIGURATION (Primary Email Service)
# ========================================
# Obtén estas credenciales desde https://dashboard.emailjs.com/

# ID del servicio de email en EmailJS
EMAILJS_SERVICE_ID=your_service_id_here

# Public Key de EmailJS
EMAILJS_PUBLIC_KEY=your_public_key_here

# Private Key de EmailJS (⚠️ NUNCA compartas públicamente)
EMAILJS_PRIVATE_KEY=your_private_key_here

# Templates de EmailJS (opcional)
EMAILJS_TEMPLATE_ID=template_default
EMAILJS_WELCOME_TEMPLATE=template_welcome
EMAILJS_PASSWORD_TEMPLATE=template_password
EMAILJS_VERIFICATION_TEMPLATE=template_verification

# ========================================
# SMTP CONFIGURATION (Fallback Email Service)
# ========================================
# Si EmailJS falla, se usará SMTP como respaldo

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@eclat.com

# Stripe Configuration (payment processing)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Cloudinary Configuration (image hosting)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Frontend URL
FRONTEND_URL=http://localhost:4200

# Server Port
PORT=5000
